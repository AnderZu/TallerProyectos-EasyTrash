<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".NuevoUsuario"
    android:background="@color/black">

    <TextView
        android:id="@+id/textView9"
        android:layout_width="362dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="Nuevo usuario"
        android:textSize="40dp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="364dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Nombres"
        android:textColor="@color/white"/>

    <EditText
        android:id="@+id/edtNUNombre"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint=""
        android:inputType="textMultiLine"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Apellido Parterno"
        android:textColor="@color/white"/>

    <EditText
        android:id="@+id/edtNUApellidoPaterno"
        android:layout_width="369dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint=""
        android:inputType="textMultiLine"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="369dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Apellido Marterno"
        android:textColor="@color/white"/>

    <EditText
        android:id="@+id/edtNUApellidoMaterno"
        android:layout_width="369dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint=""
        android:inputType="textMultiLine"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="369dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="DNI"
        android:textColor="@color/white"/>

    <EditText
        android:id="@+id/edtNUDni"
        android:layout_width="367dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint=""
        android:inputType="number"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Teléfono"
        android:textColor="@color/white"/>

    <EditText
        android:id="@+id/edtNUTelefono"
        android:layout_width="367dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint=""
        android:inputType="number"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="367dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Direccion Exacta"
        android:textColor="@color/white"/>

    <EditText
        android:id="@+id/edtNUDireccion"
        android:layout_width="366dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint=""
        android:inputType="textMultiLine"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/btnNUReguistrarUsuario"
        android:layout_width="227dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Registrar usario"
        android:backgroundTint="@color/botonBienvenido"/>
    <Button
        android:id="@+id/btnNUInicio"
        android:layout_width="227dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Iniciar seción"
        android:backgroundTint="@color/botonBienvenido"
        android:onClick="Inicio"/>



</LinearLayout>