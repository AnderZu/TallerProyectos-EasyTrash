<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".IniciarSecion"
    android:background="@color/black">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EasyTrash!"
        android:layout_gravity="center"
        android:textSize="35dp"
        android:textColor="@color/white"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="306dp"
        android:src="@drawable/logo" />
    <TextView
        android:id="@+id/textView"
        android:layout_width="364dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="DNI"
        android:textColor="@color/white"/>

    <EditText
        android:id="@+id/edtISDni"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint=""
        android:inputType="textMultiLine"
        android:textColor="@color/white"/>
    <TextView
        android:id="@+id/textView2"
        android:layout_width="364dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Teléfono"
        android:textColor="@color/white"/>

    <EditText
        android:id="@+id/edtISTelefono"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint=""
        android:inputType="textMultiLine"
        android:textColor="@color/white"/>
    <Button
        android:id="@+id/btnISIniciarSecion"
        android:layout_width="227dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Iniciar seción"
        android:onClick="iniciarSesion"
        android:backgroundTint="@color/botonBienvenido"/>
    <TextView
        android:id="@+id/valdni"
        android:layout_width="364dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="Teléfono"
        android:textColorHint="@color/black"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/valtel"
        android:layout_width="364dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="Teléfono"
        android:textColorHint="@color/black"
        android:textColor="@color/black"/>




</LinearLayout>